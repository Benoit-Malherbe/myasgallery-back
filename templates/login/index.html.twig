{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="login-form">

		<div class="login-block bg-dark container border border-dark mt-5">
			<h4 class="text-center text-warning mt-3 mb-3">Backoffice - Connexion</h4>
		</div>

		<div class="container border border-dark">

			<form action="{{ path('login') }}" method="post">
				<div class="mb-3 mt-3">
					<label for="username" class="form-label">Email</label>
					<input type="text" class="form-control" id="username" placeholder="Saisir un email" name="_username" value="{{ last_username }}"/>
				</div>
				<div class="mb-3">
					<label for="password" class="form-label">Mot de passe</label>
					<input type="password" class="form-control" id="password" placeholder="Saisir un mot de passe" name="_password"/>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="mt-4">
					<a class="text-center" href="{{ url('app_forgot_password_request') }}">
						<p>Mot de passe oublié ?</p>
					</a>
				</div>

				<div class="text-center">
					<button type="submit" class="btn mt-3 mb-3 text-warning bg-dark" style="border-radius: 0.5em; font-size: 1em">Se connecter</button>
				</div>
				
			</form>
		</div>
		
	</div>

	<div class="row d-flex justify-content-center text-center mt-3">
		<div class="m-3 col-md-4" style="width: 35em;">
			<h6>Pour se connecter et tester les fonctionnalités avec un rôle ADMIN</h6>
			<span>Email : test@test.com</span><br>
			<span>Mot de passe : TestMyasGallery2021!</span>
		</div>
		<div class="m-3 col-md-4" style="width: 35em;">
			<h6>Pour se connecter et tester les fonctionnalités avec un rôle USER</h6>
			<span>Email : user@user.com</span><br>
			<span>Mot de passe : UserMyasGallery2021!</span>
		</div>
	</div>
{% endblock %}
