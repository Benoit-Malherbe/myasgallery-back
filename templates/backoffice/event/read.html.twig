{% extends 'base.html.twig' %}

{% block title %}Hello ArtworkController!
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">{{ current_event.name }}</h1>

	<div class="container" style="max-width: 90%;">
		<div class="d-flex justify-content-center mt-5">
			<div class="col-xl-6 col-lg-6 col-xxl-3 col-md-12 mt-2" style="width: 100%;">
				<div class="card card-1">
					<a href="{{ url('backoffice_event_read', {"slug": current_event.slug}) }}"><img src="{{vich_uploader_asset(current_event, current_event.picture)}}" class="card-img-top" alt="..."></a>

					<div class="card-body">
						<p class="card-text">{{current_event.information}}</p>
					</div>

					<ul class="list-group list-group-flush text-center">
						<li class="list-group-item">Date :
							{{current_event.date.format('d/m/Y')}}</li>
						{# <li class="list-group-item">Ville : {{currentEvent.town}}</li> #}
					</ul>
					<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
						<a href="{{ url('backoffice_event_edit', {"id": current_event.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em; display: flex; justify-content: center; align-items: center;" class="btn m-4">Modifier</a>
						<div class="btn-group" role="group">
							<button id="btnGroupDrop1" type="button" class="btn m-4 dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;" data-bs-toggle="dropdown">Supprimer</button>
							<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
								<li>
									<a class="dropdown-item" href="{{ url('backoffice_event_delete', {"id": current_event.id}) }}">Confimer la suppression</a>
								</li>
								<li>
									<a class="dropdown-item" href="backoffice_event_browse">Annuler</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div>
			<h2 style="text-align:center; margin-top:2em;">Toutes Les oeuvres exposées</h2>
		</div>

		<div class="row mx-auto">
			{% for artwork in current_event.artworks %}
				<div class="col-xl-6 col-lg-6 col-xxl-3 col-md-12 col-sm-6 mt-5 d-flex align-items-stretch">
					
						<div class="card card-1" style="width: 100%;">
							<a href="{{ url('backoffice_artwork_read', {"slug": artwork.slug}) }}"><img src="{{vich_uploader_asset(artwork, artwork.picture)}}" class="card-img-top" alt="..."></a>
							<div class="card-body d-flex flex-column m-auto justify-content-center">
								<h5 class="card-title text-center">{{artwork.title}}</h5>
								<p class="card-text">Description/Particularité:
									{{artwork.description}}</p>
							</div>
							<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
								<a href="{{ url('backoffice_artwork_edit', {"id": artwork.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em; display: flex; justify-content: center; align-items: center;" class="btn m-4">Modifier</a>
								<div class="btn-group" role="group">
									<button id="btnGroupDrop1" type="button" class="btn m-4 dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;" data-bs-toggle="dropdown">Supprimer</button>
									<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
										<li>
											<a class="dropdown-item" href="{{ url('backoffice_artwork_delete', {"id": artwork.id}) }}">Confimer la suppression</a>
										</li>
										<li>
											<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
					
				</div>
			{% endfor %}
		</div>


		{# {% if current_event.artists !== null %} #}

		<div>
			<h2 style="text-align:center; margin-top:2em;">Tous les artistes présents</h2>
		</div>

		<div class="row">
			{% for artist in current_event.artists %}
				<div class="col-xl-6 col-lg-6 col-xxl-3 col-md-12 col-sm-6 mt-5 mb-5 d-flex align-items-stretch">
						<div class="card card-1" style="width: 100%;">
							<a href="{{ url('backoffice_artist_read', {"slug": artist.slug}) }}"><img src="{{vich_uploader_asset(artist, artist.photo)}}" class="card-img-top" alt="..."></a>
							<div class="card-body">
								<h5 class="card-title text-center">{{artist.name}}</h5>
								<p class="card-text">Description/Particularité:
									{{artist.biography}}</p>
							</div>
							<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
								<a href="{{ url('backoffice_artist_edit', {"id": artist.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em; display: flex; justify-content: center; align-items: center;" class="btn m-4">Modifier</a>
								<div class="btn-group" role="group">
									<button id="btnGroupDrop1" type="button" class="btn m-4 dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;" data-bs-toggle="dropdown">Supprimer</button>
									<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
										<li>
											<a class="dropdown-item" href="{{ url('backoffice_artist_delete', {"id": artist.id}) }}">Confimer la suppression</a>
										</li>
										<li>
											<a class="dropdown-item" href="backoffice_artist_browse">Annuler</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
				</div>
			{% endfor %}
		</div>

		{# {% endif %} #}

	</div>

{% endblock %}
