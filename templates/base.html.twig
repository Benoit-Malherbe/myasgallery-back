<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>Myas Gallery Backoffice - {% block title %}{% endblock title %}</title>
		<link rel="stylesheet" media="screen and (min-width:1400px)" href="{{ asset("css/style.css") }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	</head>

	<body style="background-color: #dddddd">
		{% block header %}
			<header>
				<nav class="navbar navbar-expand-lg navbar-light bg-dark" style="font-size: 1.5em;">
					<div class="container-fluid">
						<a class="navbar-brand text-warning" style="font-size: 1.5em;" href="{{ url('backoffice_main_show') }}">Myas Gallery Backoffice</a>
						<button style="font-size: 1.5em;" class="navbar-toggler bg-warning" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      						<span class="navbar-toggler-icon"></span>
    					</button>
						<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
							<ul class="navbar-nav">
								<li class="nav-item">
									<a class="text-warning nav-link {% if app.request.get('_route') == 'backoffice_artwork_browse' %}text-decoration-underline{% endif %}" href="{{ url('backoffice_artwork_browse') }}">Oeuvres</a>
								</li>
								<li class="nav-item">
									<a class="text-warning nav-link {% if app.request.get('_route') == 'backoffice_artist_browse' %}text-decoration-underline{% endif %}" href="{{ url('backoffice_artist_browse') }}">Artistes</a>
								</li>
								<li class="nav-item">
									<a class="text-warning nav-link {% if app.request.get('_route') == 'backoffice_category_browse' %}text-decoration-underline{% endif %}" href="{{ url('backoffice_category_browse') }}">Categories</a>
								</li>
								<li class="nav-item">
									<a class="text-warning nav-link {% if app.request.get('_route') == 'backoffice_event_browse' %}text-decoration-underline{% endif %}" href="{{ url('backoffice_event_browse') }}">Ev√©nements</a>
								</li>
								<li class="nav-item d-flex">
									<form action="{{ path('backoffice_search_bar') }}" method="GET" class="d-flex">
										<input class="align-self-center" type="search" name="search" placeholder="Rechercher">
										<button class="text-dark bg-warning align-self-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
  										<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
										</svg></button>
									</form>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</header>

		{% endblock header %}
		{% block body %}{% endblock body %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</body>
</html>
