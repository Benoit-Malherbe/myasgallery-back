{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">Liste des catégories</h1>

	<div class="container">

		{{ include('_partials/_flash_messages.html.twig') }}

		<div class="d-flex justify-content-center mt-4 mb-4">
			<a href="{{ url('backoffice_category_add') }}" type="button" class="btn btn-success">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewbox="0 0 16 16">
					<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
					<path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
				</svg>
			</a>
		</div>

		<div class="row">
			{% for currentCategory in category_list %}

				<div class="col-xl-4 col-lg-4 col-xxl-3 col-md-6 mt-5 d-flex align-items-stretch" style="width: auto;">
					<div class="card card-1" style="width: 18rem;">
						<a href="{{ url('backoffice_category_read', {"id": currentCategory.id}) }}"><img src="{{ asset('img/uploads/categories/') ~ currentCategory.pictureName }}" class="card-img-top" alt="..."></a>
						<div class="card-body">
							<h5 class="card-title text-center">{{currentCategory.name}}</h5>
						</div>
						<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit;">
							<a href="{{ url('backoffice_category_edit', {"id": currentCategory.id}) }}" type="button" class="btn btn-primary" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em; display: flex; justify-content: center; align-items: center;">Modifier</a>
							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em;" data-bs-toggle="dropdown">Supprimer</button>
								<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
									<li>
										<a class="dropdown-item" href="{{ url('backoffice_category_delete', {"id": currentCategory.id}) }}">Confimer la suppression</a>
									</li>
									<li>
										<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>

	{% endblock %}
