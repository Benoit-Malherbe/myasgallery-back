{% extends 'base.html.twig' %}

{% block title %}{{current_artwork.title}}{% endblock %}

{% block body %}

<h1 class="text-center mt-5">{{current_artwork.artists}}</h1>

	<div class="container" style="max-width: 90%;">

        <div class="d-flex justify-content-center mt-5">
            <div class="card card-1" style="width: 100%;">
                <img src="{{ vich_uploader_asset(current_artwork, current_artwork.picture) }}" class="card-img-top" alt="..."></a>
                <div class="card-body w-75 m-auto">
                    <p class="card-text">{{current_artwork.description}}</p>
                    <p class="text-center">Artiste : {{current_artwork.artists}}</p>
                </div>
                
                <div class="card-body d-flex align-items-end justify-content-center" style="padding: inherit">
                    <a href="{{ url('backoffice_artwork_edit', {"id": current_artwork.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;display: flex; justify-content: center; align-items: center;" class="btn m-4">Modifier</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;" class="btn m-4 dropdown-toggle" data-bs-toggle="dropdown">Supprimer</button>
                        <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <li><a class="dropdown-item" href="{{ url('backoffice_artwork_delete', {"id": current_artwork.id}) }}">Confimer la suppression</a></li>
                            <li><a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
		<div class="card mb-3 card-1 mt-5 mx-auto" style="width: 100%; height 20em;">
			<div class="d-flex">
				<div class="col-md-4 col-sm-1">
					<a href="{{ url('backoffice_artist_read', {"slug": current_artwork.artists.slug}) }}"><img src="{{ current_artwork.artists.photoUrl }}" class="img-fluid rounded-start" alt="..."></a>
                </div>
				<div class="col-md-8">
					<div class="card-body" style="overflow: hidden; overflow-y: scroll;">
						<h5 class="card-title">A propos de l'artiste</h5>
						<p class="card-text readMore">Originaire de
							{{ current_artwork.artists.country}},
							{{ current_artwork.artists.name }}
							{{ current_artwork.artists.biography }}</p>
					</div>
				</div>
			</div>
		</div>

{% endblock %}
