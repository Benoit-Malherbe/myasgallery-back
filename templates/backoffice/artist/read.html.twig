{% extends 'base.html.twig' %}

{% block title %}
	{{ current_artist.name }}
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">{{ current_artist.name }}</h1>

	<div class="container">

		<div class="card mb-3 card-1 mt-5 mx-auto" style="max-width: 576px;">
			<div class="d-flex">
				<div class="col-md-4 col-sm-1">
					<img src="{{ current_artist.photo }}" class="img-fluid rounded-start" alt="...">
				</div>
				<div class="col-md-8">
					<div class="card-body" style="height: 17em; overflow: hidden; overflow-y: scroll;">
						<h5 class="card-title">A propos de l'artiste</h5>
						<p class="card-text readMore">Originaire de {{ current_artist.country}}, {{ current_artist.name }} {{ current_artist.biography }}</p>
					</div>
				</div>
			</div>
		</div>


		<div class="card-body text-center">
			<a href="{{ url('backoffice_artist_edit', {"id": current_artist.id}) }}" type="button" class="btn btn-primary">Modifier</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown">Supprimer</button>
				<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
					<li>
						<a class="dropdown-item" href="{{ url('backoffice_artist_delete', {"id": current_artist.id}) }}">Confimer la suppression</a>
					</li>
					<li>
						<a class="dropdown-item" href="backoffice_artist_browse">Annuler</a>
					</li>
				</ul>
			</div>
		</div>

		<div>
			<h2 style="text-align:center; margin-top:2em;">Toutes ses oeuvres</h2>
		</div>

		<div class="d-flex mx-auto ms-1">
			{% for artwork in current_artist.artworks %}
			<div class="mx-auto col-xl-4 col-lg-4 col-xxl-3 col-md-6 col-sm-6">
				<div class="mt-5">
					<div class="card card-1" style="width: 18rem;">
						<a href="{{ url('backoffice_artwork_read', {"id": artwork.id}) }}"><img src="{{artwork.picture}}" class="card-img-top" alt="..."></a>
						<div class="card-body">
							<h5 class="card-title text-center">{{artwork.title}}</h5>
							<p class="card-text" style="">{{artwork.description}}</p>
						</div>
						<div class="card-body text-center">
							<a href="{{ url('backoffice_artwork_edit', {"id": artwork.id}) }}" type="button" class="btn btn-primary">Modifier</a>
							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown">Supprimer</button>
								<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
									<li>
										<a class="dropdown-item" href="{{ url('backoffice_artwork_delete', {"id": artwork.id}) }}">Confimer la suppression</a>
									</li>
									<li>
										<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>

	</div>
	
	

{% endblock %}
