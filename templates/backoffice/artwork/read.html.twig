					</button>
					<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
						<li>
							<a class="dropdown-item" href="{{ url('backoffice_artwork_delete', {"id": current_artwork.id}) }}">Confimer la suppression</a>
						</li>
						<li>
							<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div class="card mx-auto mt-5 read-size">
		<a href="{{ url('backoffice_artist_read', {"slug": current_artwork.artists.slug}) }}"><img class="img-fluid rounded-start" src="{{ current_artwork.artists.photoUrl }}" alt="Card image cap"></a>
		<div class="card-body">
			<h5 class="card-title pt-2" style="font-weight: bold;">A propos de l'artiste</h5>
			<p class="card-text readMore pt-2" style="text-align: justify;">Originaire de
				{{ current_artwork.artists.country}},
				{{ current_artwork.artists.name }}
				{{ current_artwork.artists.biography }}</p>

		</div>

	{% endblock %}
