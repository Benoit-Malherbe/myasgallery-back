{% extends 'base.html.twig' %}

{% block title %}Hello ArtworkController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">

    {% for currentArtwork in artwork_list %}
        <div class="col-sm-3 mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{currentArtwork.picture}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-center">{{currentArtwork.title}}</h5>
                    <p class="card-text">{{currentArtwork.description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Artiste : {{currentArtwork.artists}}</li>
                </ul>
                <div class="card-body text-center">
                    <button type="button" class="btn btn-primary">Modifier</button>
                    <button type="button" class="btn btn-danger">Supprimer</button>
                </div>
            </div>
        </div>
    {% endfor %}

    </div>
</div>


{% endblock %}






