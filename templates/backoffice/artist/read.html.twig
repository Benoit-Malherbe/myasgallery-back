{% extends 'base.html.twig' %}

{% block title %}
	{{ current_artist.name }}
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">{{ current_artist.name }}</h1>

	<div class="container" style="max-width: 90%;">

		<div class="card mb-3 card-1 mt-5 mx-auto" style="width: 100%; height 20em;">
			<div class="d-flex">
				<div class="col-md-4 col-sm-1">
					<img src="{{ vich_uploader_asset(current_artist, current_artist.photo) }}" class="img-fluid rounded-start" alt="...">
				</div>
				<div class="col-md-8">
					<div class="card-body" style="overflow: hidden; overflow-y: scroll;">
						<h5 class="card-title">A propos de l'artiste</h5>
						<p class="card-text readMore">Originaire de
							{{ current_artist.country}},
							{{ current_artist.name }}
							{{ current_artist.biography }}</p>
					</div>
				</div>
			</div>
		</div>

		<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit; margin-top: 1em;">
			<a href="{{ url('backoffice_artist_edit', {"id": current_artist.id}) }}" type="button" class="btn m-4" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em; display: flex; justify-content: center; align-items: center;">Modifier</a>
			<div class="btn-group" role="group">
				<button id="btnGroupDrop1" type="button" class="btn m-4 dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;" data-bs-toggle="dropdown">Supprimer</button>
				<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
					<li>
						<a class="dropdown-item" href="{{ url('backoffice_artist_delete', {"id": current_artist.id}) }}">Confimer la suppression</a>
					</li>
					<li>
						<a class="dropdown-item" href="backoffice_artist_browse">Annuler</a>
					</li>
				</ul>
			</div>
		</div>

		<div>
			<h2 style="text-align:center; margin-top:2em;">Toutes ses oeuvres</h2>
		</div>

		<div class="row mx-auto ms-1">
			{% for artwork in current_artist.artworks %}
				<div class="col-xl-6 col-lg-6 col-xxl-3 col-md-12 mt-5 d-flex align-items-stretch">
					<div class="card card-1 mx-auto" style="width: 100%;">
						<a href="{{ url('backoffice_artwork_read', {"slug": artwork.slug}) }}"><img src="{{ vich_uploader_asset(artwork, artwork.picture) }}" class="card-img-top" alt="..."></a>
						<div class="card-body d-flex align-items-end">
							<ul class="list-group list-group-flush" style="margin: 0 auto;">
								<li class="list-group-item">
									<h5 class="card-title text-center">{{artwork.title}}</h5>
								</li>
								<li class="list-group-item">
									<p class="card-text text-center">{{artwork.description}}</p>
								</li>
							</ul>
						</div>
						<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
							<a href="{{ url('backoffice_artwork_edit', {"id": artwork.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em; display: flex; justify-content: center; align-items: center;" class="btn m-4">Modifier</a>
							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" class="btn m-4 dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 8em; border-radius: 1em;" data-bs-toggle="dropdown">Supprimer</button>
								<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
									<li>
										<a class="dropdown-item" href="{{ url('backoffice_artwork_delete', {"id": artwork.id}) }}">Confimer la suppression</a>
									</li>
									<li>
										<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>

{% endblock %}
