{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}


    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class= "text-center mt-5">
    <h3>Réinitialisation de votre mot de passe</h3>
    </div>

<div class= "container mt-3 w-25 text-center">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Merci de saisir votre email. Un lien vous permettant de réinitialiser votre mot de passe vous y sera envoyé.
            </small>
        </div>

        <button class="btn btn-dark text-warning mt-5">Recevoir un email de réinitialisation</button>
    {{ form_end(requestForm) }}

    </div>
{% endblock %}
