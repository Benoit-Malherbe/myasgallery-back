{% extends 'base.html.twig' %}

{% block title %}Evénements{% endblock %}

{% block body %}

<h1 class="text-center mt-5">Liste des événements</h1>

<div class="container">

{{ include('_partials/_flash_messages.html.twig') }}

<div class="d-flex justify-content-center mt-4">
<a href="{{ url('backoffice_event_add') }}" type="button" class="btn btn-success">Ajouter un événement</a>
</div>

    <div class="row">

    {% for currentEvent in event_list %}
        <div class="col-xl-4 col-lg-4 col-xxl-3 col-md-6 mt-5">
            <div class="card card-1" style="width: 18rem;">
                <a href="{{ url('backoffice_event_read', {"id": currentEvent.id}) }}" ><img src="{{ asset('img/uploads/events/') ~ currentEvent.pictureName }}" class="card-img-top" alt="..."></a>
                
                <div class="card-body">
                    <h5 class="card-title text-center event-name">{{currentEvent.name}}</h5>
                    <p class="card-text">{{currentEvent.information|slice(0,50) ~ '…'}}</p>
                    <div class="text-center">
                        <a href="{{ url('backoffice_event_read', {"id": currentEvent.id}) }}">Détails</a>
                    </div>
                </div>
                
                <ul class="list-group list-group-flush text-center">
                    <li class="list-group-item">Date : {{currentEvent.date.format('d/m/Y')}}</li>
                    {# <li class="list-group-item">Ville : {{currentEvent.town}}</li> #}
                </ul>
                <div class="card-body text-center">
                    <a href="{{ url('backoffice_event_edit', {"id": currentEvent.id}) }}" type="button" class="btn btn-primary">Modifier</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown">Supprimer</button>
                        <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <li><a class="dropdown-item" href="{{ url('backoffice_event_delete', {"id": currentEvent.id}) }}">Confimer la suppression</a></li>
                            <li><a class="dropdown-item" href="backoffice_event_browse">Annuler</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    </div>
</div>


{% endblock %}






