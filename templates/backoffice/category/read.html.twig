{% extends 'base.html.twig' %}

{% block title %}
	{{category.name}}
{% endblock %}

{% block body %}
	<div class="container" style="max-width: 90%;">
	<div class="row mt-5 justify-content-center">
		<div class="card card-1" style="width: 100%; padding: 0;">
			<a href="{{ url('backoffice_category_read', {"slug": category.slug}) }}"><img src="{{ vich_uploader_asset(category, category.picture) }}" class="card-img-top" alt="..."></a>
			<div class="card-body">
				<h5 class="card-title text-center">{{category.name}}</h5>
			</div>
			<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
				<a href="{{ url('backoffice_category_edit', {"id": category.id}) }}" type="button" class="btn btn-primary" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em; display: flex; justify-content: center; align-items: center;">Modifier</a>
				<div class="btn-group" role="group">
					<button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em;" data-bs-toggle="dropdown">Supprimer</button>
					<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
						<li>
							<a class="dropdown-item" href="{{ url('backoffice_category_delete', {"id": category.id}) }}">Confimer la suppression</a>
						</li>
						<li>
							<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	

		{{ include('_partials/_flash_messages.html.twig') }}

		<h2 class="text-center mt-5">Liste des oeuvres de cette cat√©gorie</h2>

		<div class="row">

			{% for artwork in category.artworks %}
				<div class="col-xl-6 col-lg-6 col-xxl-3 col-md-12 mt-5 d-flex align-items-stretch">
					<div class="card card-1 mx-auto" style="width: 100%;">
						<a href="{{ url('backoffice_artwork_read', {"slug": artwork.slug}) }}"><img src="{{ asset('img/uploads/artworks/') ~ artwork.pictureName }}" class="card-img-top" alt="..."></a>

						<div class="card-body d-flex align-items-end">

							<ul class="list-group list-group-flush" style="margin: 0 auto;">
								<li class="list-group-item">
									<h5 class="card-title text-center">{{artwork.title}}</h5>
								</li>
								<li class="list-group-item">
									<p class="card-text text-center">{{artwork.description}}</p>
								</li>
								<li class="list-group-item">Artiste :
									{{artwork.artists}}</li>
							</ul>
						</div>

						<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
							<a href="{{ url('backoffice_artwork_edit', {"id": artwork.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em; display: flex; justify-content: center; align-items: center;" class="btn btn-primary">Modifier</a>
							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em;" data-bs-toggle="dropdown">Supprimer</button>
								<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
									<li>
										<a class="dropdown-item" href="{{ url('backoffice_artwork_delete', {"id": artwork.id}) }}">Confimer la suppression</a>
									</li>
									<li>
										<a class="dropdown-item" href="backoffice_artwork_browse">Annuler</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>

	</div>

{% endblock %}
