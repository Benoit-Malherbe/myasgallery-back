{% extends 'base.html.twig' %}

{% block title %}Artistes
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">Liste des artistes</h1>

	<div class="container">

		{{ include('_partials/_flash_messages.html.twig') }}

		<div class="d-flex justify-content-center mt-4">
			<a href="{{ url('backoffice_artist_add') }}" type="button" class="btn btn-success">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewbox="0 0 16 16">
					<path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
					<path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
				</svg>
			</a>
		</div>

		<div class="row justify-content-center">

			{% for currentArtist in artist_list %}
				<div class="col-xl-4 col-lg-4 col-xxl-3 col-md-6 mt-5 d-flex align-items-stretch" style="width: auto;">
					<div class="card card-1" style="width: 18rem; height: 40em;">
						<a href="{{ url('backoffice_artist_read', {"id": currentArtist.id}) }}"><img src="{{ asset('img/uploads/artists/') ~ currentArtist.photoName }}" class="card-img-top" alt="..."></a>
						<div class="card-body" style="overflow: hidden; overflow-y: scroll;">
							<h5 class="card-title text-center">{{currentArtist.name}}</h5>
							<p class="card-text">{{currentArtist.biography}}</p>
						</div>
						<div class="card-body d-flex align-items-end justify-content-between" style="padding: inherit">
							<a href="{{ url('backoffice_artist_edit', {"id": currentArtist.id}) }}" type="button" class="btn btn-primary" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em;">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
									<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
									<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
								</svg>
							</a>
							<div class="btn-group" role="group">
								<button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 3em; width: 8em;" data-bs-toggle="dropdown">
									<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewbox="0 0 24 24" width="24px" fill="#FFFFFF"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M14.12 10.47L12 12.59l-2.13-2.12-1.41 1.41L10.59 14l-2.12 2.12 1.41 1.41L12 15.41l2.12 2.12 1.41-1.41L13.41 14l2.12-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4zM6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM8 9h8v10H8V9z"/></svg>
								</button>
								<ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
									<li>
										<a class="dropdown-item" href="{{ url('backoffice_artist_delete', {"id": currentArtist.id}) }}">Confimer la suppression</a>
									</li>
									<li>
										<a class="dropdown-item" href="backoffice_artist_browse">Annuler</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}

		</div>
	</div>


{% endblock %}
