{% extends 'base.html.twig' %}

{% block title %}
	{{current_artwork.title}}
{% endblock %}

{% block body %}

	<h1 class="text-center mt-5">{{current_artwork.title}}</h1>

	<div class="container" style="max-width: 90%;">

		<div class="d-flex justify-content-center mt-5 read-size">
			<div class="card card-1" style="width: 100%;">
				<img src="{{ vich_uploader_asset(current_artwork, current_artwork.picture) }}" class="card-img-top" alt="..."></a>
			<div class="card-body w-75 m-auto">
				<p class="card-text">{{current_artwork.description}}</p>
				<p class="text-center">Artiste :
					{{current_artwork.artists}}</p>
			</div>

			<div class="card-body d-flex align-items-end justify-content-center" style="padding: inherit">
				<a href="{{ url('backoffice_artwork_edit', {"id": current_artwork.id}) }}" type="button" style="color: #ffc107; background-color: #212529; border-color: #212529; height: 4em; width: 6em; border-radius: 1em;display: flex; justify-content: center; align-items: center;" class="btn m-4">
